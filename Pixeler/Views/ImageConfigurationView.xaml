<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pixeler.Views.ImageConfigurationView">
    <Grid Margin="200">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Text="Select an image to start"
               HorizontalTextAlignment="Center"
               Grid.Row="0" />
        <Button x:Name="SelectButton"
                Text="Select"
                Grid.Row="1" />
    </Grid>
</ContentView>
