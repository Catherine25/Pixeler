<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pixeler.Views.ImageConfigurationView">
    <Grid x:Name="Body" Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Text="Select an image to start"
               HorizontalTextAlignment="Center"
               VerticalTextAlignment="Center"
               Grid.Row="0" />
        <Button x:Name="SelectButton"
                Text="Select"
                Grid.Row="1" />

        <Label x:Name="ImageResolutionLabel"
               Text="Image resolution"
               HorizontalTextAlignment="Center"
               VerticalTextAlignment="Center"
               IsVisible="False"
               Grid.Row="2"/>
        <Label x:Name="ImageResolutionValueLabel"
               HorizontalTextAlignment="Center"
               VerticalTextAlignment="Center"
               Grid.Row="3"/>

        <Button x:Name="StartButton"
                Text="Start"
                IsVisible="False"
                IsEnabled="False"
                Grid.Row="6" />
    </Grid>
</ContentView>
